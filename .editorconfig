root = true

[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{ts,html,css}]
charset = utf-8

# Indentation override for all JS under lib directory
[src/**.{ts,css}]
indent_style = space
indent_size = 2

[src/**.html]
indent_style = space
indent_size = 4
