{
  "name": "ypr-messenger",
  "version": "0.0.1",
  "description": "Yandex practicum learn project",
  "source": "src/index.html",
  "scripts": {
    "dev": "parcel",
    "build": "parcel build",
    "preserver": "npm run build",
    "server": "node back/server.js",
    "start": "npm run server",
    "lint": "eslint  src/ --ext .ts",
    "lint:styles": "stylelint  src/**/*.css",
    "lint:styles:fix": "stylelint  src/**/*.css --fix",
    "lint:fix": "eslint src/ --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vaskes79/middle.messenger.praktikum.yandex.git"
  },
  "author": "Vasily Guzov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/vaskes79/middle.messenger.praktikum.yandex/issues"
  },
  "homepage": "https://github.com/vaskes79/middle.messenger.praktikum.yandex#readme",
  "devDependencies": {
    "@ngneat/falso": "6.4.0",
    "@parcel/transformer-inline-string": "2.8.2",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "date-fns": "2.29.3",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "parcel": "2.8.2",
    "parcel-transformer-ts-css-modules": "1.0.14",
    "prettier": "2.8.3",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard": "29.0.0",
    "typescript": "4.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts}": [
      "npm run lint:fix",
      "git add"
    ],
    "src/**/*.{css}": [
      "npm run lint:styles:fix",
      "git add"
    ],
    "src/**/*.{html}": [
      "prettier --write",
      "git add"
    ]
  },
  "@parcel/transformer-css": {
    "cssModules": {
      "pattern": "[name]_[local]__[hash]"
    }
  },
  "dependencies": {
    "express": "4.18.2",
    "nanoid": "4.0.0"
  }
}
