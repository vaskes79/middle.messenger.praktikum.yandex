{
  "compilerOptions": {
    "sourceRoot": "src",
    "baseUrl": "src",
    "moduleResolution": "node",
    "target": "ES2021",
    "module": "ES2020",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./tests/",
    "./node_modules/",
    "./dist/"
  ]
}
